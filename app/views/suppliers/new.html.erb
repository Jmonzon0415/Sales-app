<div class="top"><h1>Add New Supplier! </h1> </div>

 

    <%= form_tag '/suppliers/index', method: :post do %>

 

      <div class= "forms">
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>

      <div class= "forms">
        <%= label_tag :email %>
        <%= text_field_tag :email  %>
      </div>

      <div class= "forms">
        <%= label_tag :phone %>
        <%= text_field_tag :phone %>
      </div> 




      <div><%= submit_tag 'Save' %></div>



<% end %>