<div class="top"><h1> Edit: <%= @product.name %> </h1> </div>

<h1>Updated on: </h1>

<%= form_tag "/index/#{@product.id}", method: :patch do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>

  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image  %>
  </div>

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div> 

  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>



<div><%= submit_tag 'Save' %></div>

<% end %>